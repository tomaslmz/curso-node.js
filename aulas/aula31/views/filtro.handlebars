<h1>{{categoria.nome}}</h1>
{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
        <h1>{{titulo}}</h1>
        <hr>
        <p>{{descricao}}</p>
        <hr>
        <strong>{{categoria.nome}}</strong>
        {{data}}
        <a href="/postagem/{{slug}}"><br>
        <button class="btn btn-secondary mt-2" color="#fff">Leia mais...</button></a>
    </div>
</div>

{{else}}
    <div class="alert alert-warning mt-4" role="alert">
       <h4>Não há nenhuma postagem com essa categoria registrada!</h4> 
    </div>

{{/each}}