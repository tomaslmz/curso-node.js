<h3>Editar postagem</h3>
<div class="card">
    <div class="card-body">
        <form action="/adm/postagem/edit" method="post">
            <input type="text" name="id" id="id" value="{{postagem._id}}" hidden>
            <label for="titulo">Título: </label>
            <input type="text" name="titulo" id="titulo" class="form-control" value="{{postagem.titulo}}">
            <label for="slug">Slug: </label>
            <input type="text" name="slug" id="slug" class="form-control" value="{{postagem.slug}}">
            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" id="descricao" class="form-control" value="{{postagem.descricao}}">
            <label for="conteudo">Conteúdo: </label>
            <input type="text" name="conteudo" id="conteudo" class="form-control" value="{{postagem.conteudo}}">
            <label for="categorias">Categoria: </label>
            <select name="categoria" id="categoria" class="form-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-4" type="submit">Editar</button>
        </form>
    </div>
</div>