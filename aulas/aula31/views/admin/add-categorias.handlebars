{{#each erros}}
    <div class="alert alert-danger">
        {{texto}}
    </div>
{{else}}

{{/each}}

<h3>Nova categoria</h3>
<div class="card">
    <div class="card-body">
        <form action="/adm/categorias/novo" method="post">
            <label for="nome">Nome: </label>
            <input type="text" name="nome" id="nome" placeholder="Nome da categoria" class="form-control">
            <label for="slug">Slug: </label>
            <input type="text" name="slug" id="slug" placeholder="Slug da categoria" class="form-control">
            <br>
            <button class="btn btn-success" type="submit">Criar categoria</button>
        </form>
    </div>
</div>